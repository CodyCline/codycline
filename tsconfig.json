{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ]
}